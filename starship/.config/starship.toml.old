"$schema" = 'https://starship.rs/config-schema.json'

format = """
[](subtext1)\
$os\
$username\
[](bg:teal fg:subtext1)\
$directory\
[](bg:mauve fg:teal)\
$git_branch\
$git_status\
[](fg:mauve bg:flamingo)\
$c\
$rust\
$golang\
$nodejs\
$php\
$java\
$kotlin\
$haskell\
$python\
[](fg:flamingo bg:orange)\
$conda\
[](fg:orange bg:yellow)\
$time\
[ ](fg:yellow)\
$cmd_duration\
$line_break\
$character"""

palette = 'draculaplus'

[os]
disabled = false
style = "bg:subtext1 fg:crust"

[os.symbols]
Windows = ""
Ubuntu = "󰕈"
SUSE = ""
Raspbian = "󰐿"
Mint = "󰣭"
Macos = "󰀵"
Manjaro = ""
Linux = "󰌽"
Gentoo = "󰣨"
Fedora = "󰣛"
Alpine = ""
Amazon = ""
Android = ""
Arch = "󰣇"
Artix = "󰣇"
CentOS = ""
Debian = "󰣚"
Redhat = "󱄛"
RedHatEnterprise = "󱄛"

[username]
show_always = false
style_user = "bg:red fg:crust"
style_root = "bg:red fg:crust"
format = '[ $user]($style)'

[directory]
style = "bg:teal fg:crust"
format = "[ $path ]($style)"
truncation_length = 3
truncation_symbol = "…/"

[directory.substitutions]
"Documents" = "󰈙 "
"Downloads" = " "
"Music" = "󰝚 "
"Pictures" = " "
"Developer" = "󰲋 "

[git_branch]
symbol = ""
style = "bg:mauve"
format = '[[ $symbol $branch ](fg:crust bg:mauve)]($style)'

[git_status]
style = "bg:mauve"
format = '[[($all_status$ahead_behind )](fg:crust bg:mauve)]($style)'

[nodejs]
symbol = ""
style = "bg:flamingo"
format = '[[ $symbol( $version) ](fg:crust bg:flamingo)]($style)'

[c]
symbol = " "
style = "bg:flamingo"
format = '[[ $symbol( $version) ](fg:crust bg:flamingo)]($style)'

[rust]
symbol = ""
style = "bg:flamingo"
format = '[[ $symbol( $version) ](fg:crust bg:flamingo)]($style)'

[golang]
symbol = ""
style = "bg:flamingo"
format = '[[ $symbol( $version) ](fg:crust bg:flamingo)]($style)'

[php]
symbol = ""
style = "bg:flamingo"
format = '[[ $symbol( $version) ](fg:crust bg:flamingo)]($style)'

[java]
symbol = " "
style = "bg:flamingo"
format = '[[ $symbol( $version) ](fg:crust bg:flamingo)]($style)'

[kotlin]
symbol = ""
style = "bg:flamingo"
format = '[[ $symbol( $version) ](fg:crust bg:flamingo)]($style)'

[haskell]
symbol = ""
style = "bg:flamingo"
format = '[[ $symbol( $version) ](fg:crust bg:flamingo)]($style)'

[python]
symbol = ""
style = "bg:flamingo"
format = '[[ $symbol( $version)(\(#$virtualenv\)) ](fg:crust bg:flamingo)]($style)'

[docker_context]
symbol = ""
style = "bg:sapphire"
format = '[[ $symbol( $context) ](fg:crust bg:sapphire)]($style)'

[conda]
symbol = "  "
style = "fg:crust bg:orange"
format = '[$symbol$environment ]($style)'
ignore_base = false

[time]
disabled = false
time_format = "%R"
style = "bg:yellow"
format = '[[  $time ](fg:crust bg:yellow)]($style)'

[line_break]
disabled = false

[character]
disabled = false
success_symbol = '[❯](bold fg:green)'
error_symbol = '[❯](bold fg:red)'
vimcmd_symbol = '[❮](bold fg:green)'
vimcmd_replace_one_symbol = '[❮](bold fg:lavender)'
vimcmd_replace_symbol = '[❮](bold fg:lavender)'
vimcmd_visual_symbol = '[❮](bold fg:yellow)'

[cmd_duration]
show_milliseconds = true
format = " in $duration "
style = "bg:lavender"
disabled = false
show_notifications = true
min_time_to_notify = 45000

[palettes.draculaplus]
# DraculaPlus theme colors - toned down for less vibrant appearance
background = "#212121"
black = "#21222C"
blue = "#6B7EE0"
bright_black = "#545454"
bright_blue = "#8B9EE0"
bright_cyan = "#7BC4D4"
bright_green = "#5BC79B"
bright_purple = "#C085C8"
bright_red = "#E85A5A"
bright_white = "#E8E8E2"
bright_yellow = "#D4B85A"
cursor = "#E8E8E2"
cyan = "#70D1E8"
foreground = "#E8E8E2"
green = "#4AC76B"
purple = "#B284C4"
red = "#E64545"
selection = "#44475A"
white = "#E8E8E2"
yellow = "#F0C674"
orange = "#ff8700"

