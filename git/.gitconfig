[include]
    path = ~/.git-personal.conf
[includeIf "gitdir:~/ffxiv-repos/"]
    path = ~/.git-ffxiv.conf

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[credential "https://github.com"]
        helper =
	helper = !/usr/bin/gh auth git-credential
